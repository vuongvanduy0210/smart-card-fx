<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #ECEFF1;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <effect>
        <InnerShadow color="#0000000d" height="50.0" radius="24.5" width="50.0"/>
    </effect>
    <VBox alignment="CENTER" maxWidth="600.0" prefHeight="400.0" spacing="30.0"
          style="-fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #CFD8DC; -fx-border-width: 1;"
          AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0"
          AnchorPane.topAnchor="50.0">

        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>

        <StackPane>
            <children>
                <ImageView fx:id="avatarImage" fitHeight="223.0" fitWidth="442.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/ic_insert_card.png"/>
                    </image>
                </ImageView>
            </children>
        </StackPane>

        <VBox alignment="CENTER" spacing="8.0">
            <Label text="VUI LÒNG KẾT NỐI THẺ" textFill="#455A64">
                <font>
                    <Font name="Segoe UI Bold" size="22.0"/>
                </font>
            </Label>

            <Label text="Hệ thống chưa phát hiện thẻ công dân." textFill="#78909c">
                <font>
                    <Font name="Segoe UI" size="16.0"/>
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="5.0">
                <Label text="Vui lòng cắm thẻ vào đầu đọc và nhấn nút" textFill="#78909c">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Label>
                <Label style="-fx-background-color: #FF7043; -fx-background-radius: 4; -fx-padding: 2 6;"
                       text="Kết nối thẻ" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Label>
                <Label text="ở trên." textFill="#78909c">
                    <font>
                        <Font name="Segoe UI" size="14.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>

    </VBox>
</AnchorPane>
